<UserControl
    x:Class="EcardQuery.OperationItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EcardQuery"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="titleBlock" Text="交易历史查询" HorizontalAlignment="Center" FontSize="{ThemeResource TextStyleExtraLargeFontSize}" VerticalAlignment="Bottom"  />
        <TextBlock x:Name="descriptionBlock" Text="查询历史交易记录，但不能查询当天的交易" TextWrapping="WrapWholeWords" Foreground="{ThemeResource SystemControlForegroundBaseMediumHighBrush}" Grid.Row="1" HorizontalAlignment="Center" />
    </Grid>
</UserControl>
